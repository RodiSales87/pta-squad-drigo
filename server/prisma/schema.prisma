// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  age       Int
}

model Test {
  id   Int    @id @default(autoincrement())
  name String
  age  Int
}

model Matches {
  id  String   @id @default(uuid())
  participants String? // Um array provavelmente seria melhor, mas o array n√£o pode ser nulo, e os participantes podem ser nulos
  maxParticipants Int
  numParticipants Int
  link  String
  description String?
  game String
  date DateTime
  hour DateTime
  contactPlatform String
}